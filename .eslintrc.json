{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "rules": {
        "react/prefer-stateless-function": 0,
        "max-len": [
            "error",
            120
        ],
        "no-console": 0,
        "react/forbid-prop-types": [
            0,
            {
                "forbid": [
                    "any",
                    "array",
                    "object"
                ]
            }
        ],
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "import/no-named-as-default": 0,
        "import/no-named-as-default-member": 0,
        "@": 0
    }
}